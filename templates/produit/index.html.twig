{% extends 'base.html.twig' %}

{% block title %}Produits Page{% endblock %}

{% block body %}
{% for produit in produits %}
    <div class="produit">
    <h1>{{produit.nom}}</h1>
    <p>{{produit.dateDeCreation|date("m/d/Y")}}</p> 
    <img src="{{produit.image}}" alt="">
    <p>Le prix est {{produit.prix}}</p>
    <p>Description : {{produit.description}}</p>
    <a href=""><button class="btn btn-success">Plus d'info</button></a>

    </div>
{% endfor %}


